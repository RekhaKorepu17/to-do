<div class="container">
  <h1>Edit Task</h1>

  <div class="form-container">
    <%= form_with model: @task, local: true do |form| %>
      <div class="form-group">
        <%= form.label :title, "Task Title", class: "form-label" %>
        <%= form.text_field :title, class: "task-input" %>
        <% if @task.errors[:title].any? %>
          <p class="error-message"><%= @task.errors[:title].first %></p>
        <% end %>
      </div>

      <div class="form-group">
        <label class="checkbox-label">
          <%= form.check_box :completed %>
          <span>Mark as completed</span>
        </label>
      </div>

      <div class="form-actions">
        <%= form.submit "Update Task", class: "btn btn-primary" %>
        <%= link_to "Cancel", tasks_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>